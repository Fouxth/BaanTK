rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ✅ Rules สำหรับ line-uploads (รูปจาก LINE Bot)
    match /line-uploads/{allPaths=**} {
      // อ่านได้ทุกคน (สำหรับแสดงใน admin dashboard)
      allow read: if true;
      
      // เขียนได้เฉพาะจาก Cloud Functions
      allow write: if false;
    }
    
    // ✅ Rules สำหรับ uploads ทั่วไป
    match /uploads/{userId}/{allPaths=**} {
      // อ่านได้เฉพาะเจ้าของไฟล์หรือ admin
      allow read: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
      
      // เขียนได้เฉพาะเจ้าของไฟล์
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        isValidImage() &&
        resource.size < 5 * 1024 * 1024; // ไม่เกิน 5MB
    }
    
    // ✅ Rules สำหรับไฟล์สาธารณะ
    match /public/{allPaths=**} {
      // อ่านได้ทุกคน
      allow read: if true;
      
      // เขียนได้เฉพาะ admin
      allow write: if isAdmin();
    }
    
    // ✅ Rules สำหรับ temp files
    match /temp/{userId}/{allPaths=**} {
      // อ่าน/เขียนได้เฉพาะเจ้าของ
      allow read, write: if request.auth != null && 
        request.auth.uid == userId &&
        isValidImage() &&
        resource.size < 10 * 1024 * 1024; // ไม่เกิน 10MB
    }
    
    // ✅ Helper functions
    function isAdmin() {
      return request.auth != null && 
        request.auth.token.admin == true;
    }
    
    function isValidImage() {
      return resource.contentType != null &&
        resource.contentType.matches('image/.*');
    }
  }
}
